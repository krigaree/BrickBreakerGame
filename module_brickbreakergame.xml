<?xml version="1.0" encoding="UTF-8"?>
<project name="module_brickbreakergame" default="compile.module.brickbreakergame">
  <dirname property="module.brickbreakergame.basedir" file="${ant.file.module_brickbreakergame}"/>
  
  <property name="module.jdk.home.brickbreakergame" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.brickbreakergame" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.brickbreakergame" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.brickbreakergame" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="brickbreakergame.output.dir" value="${module.brickbreakergame.basedir}/out/production/BrickBreakerGame"/>
  <property name="brickbreakergame.testoutput.dir" value="${module.brickbreakergame.basedir}/out/test/BrickBreakerGame"/>
  
  <path id="brickbreakergame.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="brickbreakergame.module.production.classpath">
    <path refid="${module.jdk.classpath.brickbreakergame}"/>
  </path>
  
  <path id="brickbreakergame.runtime.production.module.classpath">
    <pathelement location="${brickbreakergame.output.dir}"/>
  </path>
  
  <path id="brickbreakergame.module.classpath">
    <path refid="${module.jdk.classpath.brickbreakergame}"/>
    <pathelement location="${brickbreakergame.output.dir}"/>
  </path>
  
  <path id="brickbreakergame.runtime.module.classpath">
    <pathelement location="${brickbreakergame.testoutput.dir}"/>
    <pathelement location="${brickbreakergame.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.brickbreakergame">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.brickbreakergame">
    <patternset refid="excluded.from.module.brickbreakergame"/>
  </patternset>
  
  <path id="brickbreakergame.module.sourcepath">
    <dirset dir="${module.brickbreakergame.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.brickbreakergame" depends="compile.module.brickbreakergame.production,compile.module.brickbreakergame.tests" description="Compile module BrickBreakerGame"/>
  
  <target name="compile.module.brickbreakergame.production" depends="register.custom.compilers" description="Compile module BrickBreakerGame; production classes">
    <mkdir dir="${brickbreakergame.output.dir}"/>
    <javac2 destdir="${brickbreakergame.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.brickbreakergame}/javac">
      <compilerarg line="${compiler.args.brickbreakergame}"/>
      <bootclasspath refid="brickbreakergame.module.bootclasspath"/>
      <classpath refid="brickbreakergame.module.production.classpath"/>
      <src refid="brickbreakergame.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.brickbreakergame"/>
    </javac2>
    
    <copy todir="${brickbreakergame.output.dir}">
      <fileset dir="${module.brickbreakergame.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.brickbreakergame.tests" depends="register.custom.compilers,compile.module.brickbreakergame.production" description="compile module BrickBreakerGame; test classes" unless="skip.tests"/>
  
  <target name="clean.module.brickbreakergame" description="cleanup module">
    <delete dir="${brickbreakergame.output.dir}"/>
    <delete dir="${brickbreakergame.testoutput.dir}"/>
  </target>
</project>